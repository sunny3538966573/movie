<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FilmDetailsActivity"
    android:background="@drawable/movie_bei">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="30dp">
<ImageView
    android:id="@+id/movie_img_details"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/com_icon_movie_default_hdpi"
    android:layout_marginLeft="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影详情"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_toRightOf="@id/movie_img_details"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/com_icon_collection_selected_hdpi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/name_text_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="铁血战士"
        android:gravity="center_horizontal"
        android:layout_marginTop="70dp"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_movie_details"
        android:layout_width="259dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name_text_movie"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="312dp"
        android:layout_centerHorizontal="true"
        android:layout_height="32dp"
        android:layout_below="@id/img_movie_details"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="58dp"
            android:layout_height="32dp"
            android:text="详情"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/shape_details_bg"/>
        <TextView
            android:layout_width="58dp"
            android:layout_height="32dp"
            android:text="详情"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="26.6dp"
            android:background="@drawable/shape_details_bg"/>
        <TextView
            android:layout_width="58dp"
            android:layout_height="32dp"
            android:text="详情"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="26.6dp"
            android:background="@drawable/shape_details_bg"/>
        <TextView
            android:layout_width="58dp"
            android:layout_height="32dp"
            android:text="详情"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="26.6dp"
            android:background="@drawable/shape_details_bg"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/linear"
        android:background="@drawable/shape_detail_xia_bg">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/my_icon_logout_default_hdpi"
            android:layout_marginLeft="24dp"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:text="购票"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginRight="24dp"
            android:background="@drawable/shape_goupiao_bg"/>

    </RelativeLayout>
</RelativeLayout>