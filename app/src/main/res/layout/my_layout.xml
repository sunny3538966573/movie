<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/my_bg">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/my_icon_remind_default_hdpi"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_my"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"/>
        <TextView
            android:id="@+id/nikename_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="冬天来了"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@id/img_my"/>
        <TextView
            android:layout_width="66dp"
            android:layout_height="28dp"
            android:text="签到"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/nikename_my"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_qiandao_bg"
            android:gravity="center"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/shape_my_bg"
        android:elevation="2dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_messiage_default_hdpi"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的信息"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#333333" />

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/shape_my_bg"
        android:elevation="2dp">
        <LinearLayout
            android:id="@+id/linear_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_attention_default_hdpi"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#333333" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:layout_toRightOf="@id/linear_my">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_rccord_default_hdpi"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购票记录"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#333333"/>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/shape_my_bg"
        android:elevation="2dp">
        <LinearLayout
            android:id="@+id/linear1_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_feedback_default_hdpi"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#333333" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:layout_toRightOf="@id/linear1_my">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_version_default_hdpi"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购票记录"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#333333"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:layout_toRightOf="@id/linear2_my">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/my_icon_logout_default_hdpi"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购票记录"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#333333"/>

        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="八维移动通信学院毕业作品"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
</LinearLayout>