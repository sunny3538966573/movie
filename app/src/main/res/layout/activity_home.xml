<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff">
    <android.support.v4.view.ViewPager
        android:id="@+id/home_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/home_film"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/com_icon_film_fault_hdpi"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"/>
            <TextView
                android:id="@+id/home_cinema"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/com_icon_cinema_default_hdpi"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/home_my"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/com_icon_my_default_hdip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"/>
        </RelativeLayout>




</RelativeLayout>